  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File as Module",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "${command:extension.commandvariable.file.relativeFileDotsNoExtension}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Current Test File",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": [
        "run",
        "-m",
        "unittest",
        "${command:extension.commandvariable.file.relativeFileDotsNoExtension}"
      ],
      "module": "coverage",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
